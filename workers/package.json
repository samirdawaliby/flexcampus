{
  "name": "flexcampus-api",
  "version": "1.0.0",
  "description": "API Backend pour FlexCampus - Cloudflare Workers",
  "main": "src/index.ts",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "tail": "wrangler tail",
    "db:migrate": "wrangler d1 execute flexcampus-db --file=../database/schema.sql",
    "db:seed": "wrangler d1 execute flexcampus-db --file=../database/seed.sql",
    "db:query": "wrangler d1 execute flexcampus-db --command"
  },
  "dependencies": {
    "hono": "^4.0.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240117.0",
    "typescript": "^5.3.0",
    "wrangler": "^3.0.0"
  }
}
